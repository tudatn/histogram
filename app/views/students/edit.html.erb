<%= stylesheet_link_tag "students" %>

<%= link_to("<< Back to List", students_path, :class => 'back-link') %>

<div class="students edit">
  <h2>Update Student</h2>

  <%= form_for(@student) do |f| %>
  <table summary="Student form fields">
    <tr>
      <th>Student ID</th>
      <td><%= f.text_field(:student_id, :disabled => true) %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= f.text_field(:email) %></td>
    </tr>
  </table>

  <div class="form-buttons">
    <%= f.submit("Update Student") %>
  </div>
  <% end %>
</div>
