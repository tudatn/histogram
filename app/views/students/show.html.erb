<%= link_to("<< Back to List", students_path, :class => 'back-link') %>

<div class="student show">
  <h2>Show Student</h2>

  <table summary="Student detail view">
    <tr>
      <th>Student ID</th>
      <td><%= @student.student_id %></td>
    </tr>
    <tr>
      <th>Full Name</th>
      <td><%= @student.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @student.email %></td>
    </tr>
  </table>

</div>
