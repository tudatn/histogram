<div class="courses index">
  <h2>Courses</h2>

  <%= link_to("Add New Course", new_course_path, :class => 'action new') %>

  <table class="listing" summary="Course list">
    <tr class="header">
      <th>CourseID</th>
      <th>Description</th>
    </tr>

    <% @courses.each do |course| %>
    <tr>
      <td><%= link_to(course.course_id, course_path(course)) %></td>
      <td><%= course.description %></td>
      <td class="actions">
        <%= link_to("View", course_path(course), :class => 'action show') %>
        <%= link_to("Edit", edit_course_path(course), :class => 'action edit') %>
        <%= link_to("Delete", delete_course_path(course), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
