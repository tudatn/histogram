<%= link_to("<< Back to List", courses_path, :class => 'back-link') %>

<div class="courses edit">
  <h2>Update Course</h2>

  <%= form_for(@course) do |f| %>
    <table summary="Course form fields">
      <tr>
        <th>Course ID</th>
        <td><%= f.text_field(:course_id) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_field(:description) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Update Course") %>
    </div>
  <% end %>
</div>
